{% extends 'email/base.html.twig' %}
            {% block content %}

<!DOCTYPE html>
<html lang="en">

<head>
    {% include 'partials/header_en.html.twig' %}
    {# <link href="{{ theme_url }}/assets/css/contact.css" rel="stylesheet"> #}
</head>

<body class="contact-page">

  {# Menu #}
   {% include 'partials/navigation_en.html.twig' %}
  <main class="main">

    <div class="page-title accent-background">
      <div class="container d-lg-flex justify-content-between align-items-center">
        <h1 class="mb-2 mb-lg-0">Contact</h1>
        <nav class="breadcrumbs">
          <ol>
            <li><a href="{{ page.find('/home').url }}">Home</a></li>
            <li class="current">Contact</li>
          </ol>
        </nav>
      </div>
    </div>

    <section id="contact" class="contact section">

      <div class="mb-5">
        <iframe  style="width: 100%; height: 400px;"src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3918.9601622929426!2d106.70612387451766!3d10.814360658493937!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31752896e0327999%3A0xed9cac7b7cfeb29e!2zMTUwIE5ndXnhu4VuIFjDrSwgUGjGsOG7nW5nIDI2LCBCw6xuaCBUaOG6oW5oLCBI4buTIENow60gTWluaCwgVmnhu4d0IE5hbQ!5e0!3m2!1svi!2s!4v1741254525251!5m2!1svi!2s" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>      </div>
      <div class="container" data-aos="fade">

        <div class="row gy-5 gx-lg-5">

          <div class="col-lg-4">

            <div class="info">
              <h3>Contact</h3>
              <p>Leave your information so we can contact and support you as soon as possible!</p>

              <div class="info-item d-flex">
                <i class="bi bi-geo-alt flex-shrink-0"></i>
                <div>
                  <h4>Address:</h4>
                  <p>F1, QCoop Building, 150 Nguyen Xi, Ward 26, Binh Thanh District, Ho Chi Minh City, Vietnam</p>
                </div>
              </div>

              <div class="info-item d-flex">
                <i class="bi bi-envelope flex-shrink-0"></i>
                <div>
                  <h4>Email:</h4>
                  <p>info@bookde.vn</p>
                </div>
              </div>

              <div class="info-item d-flex">
                <i class="bi bi-phone flex-shrink-0"></i>
                <div>
                  <h4>Phone:</h4>
                  <p>+84 523 734 193</p>
                </div>
              </div>

            </div>

          </div>

          <div class="form col-lg-8">
            <form action="{{form.action}}" method="post" role="form" name="{{form.name}}" class="php-email-form">
              {% for field in form.fields %}
                  <div class="form-group mt-3">
                      <input 
                          type="{{ field.type|e }}" 
                          name="{{ field.name|e }}" 
                          class="form-control" 
                          id="{{ field.name|e }}" 
                          placeholder="{{ field.placeholder|e }}" 
                          {% if field.validate.required %} required {% endif %}
                      >
                  </div>
                {% endfor %}
                <div class="text-center">
                    <button type="{{ form.buttons.submit.type|e }}" value="{{ form.buttons.submit.value|e }} id="send">{{ form.buttons.submit.value|e }}</button>
                </div> 
              </form>           
            {# <form action="{{ page.url }}" method="post" role="form" class="php-email-form" name="contact-form">
              <div class="row">
                <div class="col-md-6 form-group">
                  <input type="text" name="name" class="form-control" id="name" placeholder="Tên của bạn" required="">
                </div>
                <div class="col-md-6 form-group mt-3 mt-md-0">
                  <input type="tel" class="form-control" name="phone" id="phone" placeholder="Số điện thoại của bạn" required="">
                </div>
              </div>
              <div class="form-group mt-3">
                  <input type="email" class="form-control" name="email" id="email" placeholder="Email của bạn" required="">
              </div>
              <div class="form-group mt-3">
                <textarea class="form-control" name="message" id="message" placeholder="Lời nhắn" required=""></textarea>
              </div>
              <div class="my-3">
                <div class="loading">Đang gửi</div>
                <div class="error-message">Lỗi</div>
                <div class="sent-message">Tin nhắn của bạn đã được gửi! Xin cảm ơn</div>
              </div>
              <div class="text-center"><button type="submit">Gửi</button></div>
            </form> #}
          </div>
        </div>
      </div>
    </section>

  </main>

  <footer id="footer" class="footer dark-background">
       {% include 'partials/footer_en.html.twig' %}
</footer>

</body>

</html>
            {% endblock %}

