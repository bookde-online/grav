<section id="services" class="services section light-background">
    <div class="container">
        <div class="row gy-4">
            {% if page.header.title  %}
                <h2 class="inner-title"><b>{{ page.header.title }}</b></h2>
            {% endif %}
            {% if page.header.services %}
                {% for service in page.header.services %}
                    <div class="col-lg-4 col-md-6" data-aos="fade-up" data-aos-delay="200">
                            <div class="service-item item-orange position-relative" style="text-align: center;">
                                {% if service.image %}
                                    <div class="icon">
                                        {% set image_name = service.image|keys|first %}
                                        {% set image = page.media[image_name] %}
                                        {% if image %}
                                            <img src="{{ image.url }}" alt="{{ service.title }}" style="width: 100%; height: 140px; border-radius: 50%;" loading="lazy">
                                        {% endif %}
                                    </div>
                                {% endif %}
                                <a href="{{ page.url }}/{{ service.title|lower|replace({' ': '-'}) }}"><h3>{{ service.title }}</h3></a>
                                {# <a href="{{ page.url }}" class="stretched-link">
                                    <h3>{{ service.title }}</h3>
                                </a> #}
                                {% if service.subtitle %}
                                    <p>{{ service.subtitle }}</p>
                                {% endif %}
                            </div>
                    </div><!-- End Service Item -->
                {% endfor %}
            {% endif %}
        </div>
        <hr>
        {% if page.header.subtitle %}
            <h3 style="font-size: 20px; font-family: 'Poppins-light', sans-serif; display: flex; justify-content: center; margin-top: 50px; text-align: center;">
            <i>{{ page.header.subtitle }}</i>
            </h3>
        {% endif %}
    </div>
</section><!-- /Services Section -->