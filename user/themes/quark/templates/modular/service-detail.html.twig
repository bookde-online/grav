{% extends 'partials/base.html.twig' %}

{% block content %}

  <!-- Page Title -->
  <div class="page-title accent-background">
    <div class="container d-lg-flex justify-content-between align-items-center">
      <h1 class="mb-2 mb-lg-0">Chi tiết dịch vụ</h1>
      <nav class="breadcrumbs">
        <ol>
          <li><a href="{{ base_url }}">Trang chủ</a></li>
          <li class="current">Chi tiết dịch vụ</li>
        </ol>
      </nav>
    </div>
  </div>
  <!-- End Page Title -->

  <!-- Service Details Section -->
  <section id="service-details" class="service-details section">

    <div class="container">
      <div class="row gy-4">

        <!-- Danh sách các dịch vụ -->
        <div class="col-lg-4" data-aos="fade-up" data-aos-delay="100">
          <div class="services-list">
            {% for service in page.parent.header.services %}
              <a href="{{ service.link }}" class="{{ service.link == page.url ? 'active' : '' }}">
                {{ service.title }}
              </a>
            {% endfor %}
          </div>

          <!-- Mô tả ngắn -->
          {% set current_service = page.parent.header.services|filter(s => s.link == page.url)|first %}
          {% if current_service %}
            <h4>{{ current_service.subtitle }}</h4>
            <p>{{ current_service.short_description }}</p>
          {% endif %}
        </div>

        <!-- Nội dung chi tiết dịch vụ -->
        <div class="col-lg-8" data-aos="fade-up" data-aos-delay="200">

          {% if current_service.image %}
            <img src="{{ page.parent.media[current_service.image].url }}" alt="{{ current_service.title }}" class="img-fluid services-img">
          {% endif %}

          <h3 style="display: flex; justify-content: center; text-align: center; margin: 10px;">
            {{ current_service.title }}
          </h3>

          <p>{{ current_service.description }}</p>
        </div>

      </div>
    </div>

  </section>
  <!-- /Service Details Section -->

{% endblock %}
