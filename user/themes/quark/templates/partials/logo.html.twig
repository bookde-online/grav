{% set logo = theme_var(mobile ? 'custom_logo_mobile' : 'custom_logo') %}
<a href="{{ home_url }}" class="logo d-flex align-items-center me-auto">
    {% if logo and logo|length > 0 %}
        {% set logo_file = logo|first.name %}
        <img src="{{ url('theme://images/logo/' ~ logo_file) }}" alt="{{ site.title }}" />
    {% else %}
        <img src="{{ url('theme://images/logo.webp') }}" alt="{{ site.title }}" />
    {% endif %}
</a>